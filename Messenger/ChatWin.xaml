<Window x:Class="Messenger.ChatWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger"
        mc:Ignorable="d"
        Title="ChatWin" Height="450" Width="800">
    <Grid>        
        <ListBox Name="lb" SelectionMode="Single" Margin="61,10,61,180">
            <ScrollViewer Name="scrollTxt" VerticalScrollBarVisibility="Visible">                
            </ScrollViewer>
        </ListBox>
            
        <TextBox Name="UserTxt" HorizontalAlignment="Left" Height="102" Margin="61,0,0,39" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="352" KeyDown="UserTxt_KeyDown"/>
        <Button Name="TxtPost" Content="Отправить" HorizontalAlignment="Left" Margin="452,0,0,39" VerticalAlignment="Bottom" MinWidth="161" MinHeight="56" Click="TxtPost_Click"/>
    </Grid>

</Window>
