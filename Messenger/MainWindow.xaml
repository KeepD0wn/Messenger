        <Label Content="Пароль" HorizontalAlignment="Left" Margin="99,252,0,0" VerticalAlignment="Top" Height="43" Width="171" FontSize="22" Background="Transparent"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="200,325,0,0" VerticalAlignment="Top" Width="200" Height="66" FontSize="48" Background="#4C0000FF" Click="Button_Click"/>
